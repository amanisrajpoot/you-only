# Next.js Shop Environment Variables
NODE_ENV=production

# API Configuration
NEXT_PUBLIC_REST_API_ENDPOINT=http://localhost/backend
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost/backend/graphql

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3003
NEXT_PUBLIC_SITE_NAME=Chawkbazar Shop

# Authentication
NEXTAUTH_URL=http://localhost:3003
NEXTAUTH_SECRET=your-secret-key-here

# Payment Gateways (Optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
NEXT_PUBLIC_PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Social Login (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_FB_PIXEL_ID=

# Other Services
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# PWA Configuration
NEXT_PUBLIC_PWA_NAME=Chawkbazar Shop
NEXT_PUBLIC_PWA_SHORT_NAME=Chawkbazar
NEXT_PUBLIC_PWA_DESCRIPTION=Chawkbazar E-commerce Shop
NEXT_PUBLIC_PWA_THEME_COLOR=#000000
NEXT_PUBLIC_PWA_BACKGROUND_COLOR=#ffffff
